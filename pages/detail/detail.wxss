.header{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid black;
  padding-bottom: 10rpx;
}

.header-title{
  margin-bottom: 15rpx;
  padding: 15rpx;
}
.header-title image{
  height: 20px;
  width: 20px;
  margin-right: 15rpx;
}
.header-author{
  font-size: 12px; 
  margin-right: 10px;
  color: #9dacb7;
}
.header-title-main{
  font-size: 17px;
}

.header-footer{
  display: flex;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.header-footer text{
  font-size: 12px;
  color: #9dacb7;
}

.content{
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.content rich-text{
  font-size: 14px;
}

.footer{
  border-top: 10px solid #ccc;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
}

.comment-item{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-bottom: 1px solid black;
  padding-left: 10rpx;
}
.comment-item text{
  font-size: 14px;
  color: #9dacb7;
}
.comment-item rich-text{
  font-size: 14px;
  color: black;
}