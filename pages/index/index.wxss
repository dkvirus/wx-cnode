.list{
  display: flex;
  flex-direction: column;
  height: 300rpx;
  border-bottom: 4px solid #9dacb7;
}

.item-header{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20rpx;
  height: 30%;
}
.item-header image{
  height: 20px;
  width: 20px;
  margin-right: 15rpx;
}
.item-header text{
  font-size: 14px;
  color: #9dacb7;
}

.item.content{
  height: 40%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-left: 50rpx;
}
.item.content text{
  font-size: 17px;
}

.item-footer{
  height: 30%;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.item-footer view{
  font-size: 14px;
  color: #9dacb7;
}